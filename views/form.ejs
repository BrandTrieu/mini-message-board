<html>
    <body>
        <h1>New Message</h1>
        <form action="/new" method="POST">
            <div>
                <label for="user">Name:</label>
                <input type="text" id="user" name="user" required>
            </div>
            <div>
                <label for="text">Message:</label>
                <textarea id="text" name="text" required></textarea>
            </div>
            <button type="submit">Send</button>
        </form>
    </body>
</html>